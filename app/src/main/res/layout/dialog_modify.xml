<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layerType="software"
        android:background="@drawable/dash_line"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/dialog_addition_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="group:"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/dialog_addition_edit_group"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_addition_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name:"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/dialog_addition_edit_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_addition_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description:"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/dialog_addition_edit_description"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</LinearLayout>